{{#each pagedContent as |item|}}
  <NodeDot @model={{item}} />
{{else}}
  <div class="text-center text-muted pt-20 pb-20">
    {{#if searchText}}
      {{t "clustersPage.table.noMatch"}}
    {{else}}
      {{t "clustersPage.table.noData"}}
    {{/if}}
  </div>
{{/each}}
{{#if (gt filtered.length pagedContent.length)}}
  <PageNumbers
    @content={{pagedContent}}
    @class="text-center mt-10 mb-10 no-select"
    @indexTo={{indexTo}}
    @indexFrom={{indexFrom}}
    @totalCount={{filtered.length}}
    @textLabel="pagination.node"
  />
{{/if}}
